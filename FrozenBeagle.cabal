  build-depends:       base >=4.7 && <4.8,
                       FrozenBeagle
  
  -- Directories containing source files.
  hs-source-dirs:      src

  -- compiler options
  ghc-options:         -Wall
  
  -- Base language which the package is written in.
  default-language:    Haskell2010
 

test-suite tests
  ghc-options:         -Wall
  type:                exitcode-stdio-1.0
  main-is:             Tests.hs
  hs-source-dirs:      testsuite
  build-depends:       base,
                       FrozenBeagle,
                       hspec >= 2.0 && < 2.1
  default-language:    Haskell2010 
